<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <!-- 填充颜色 -->
            <solid android:color="@color/xb_color"></solid>
            <!-- 线的宽度，颜色灰色 -->
            <stroke android:width="1dp" android:color="@color/xb_color"></stroke>
            <!-- 矩形的圆角半径 -->
            <corners android:radius="3dp" />
        </shape>
    </item>
    
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <!-- 填充颜色 -->
            <solid android:color="@color/act_background"></solid>
            <!-- 线的宽度，颜色灰色 -->
            <stroke android:width="1dp" android:color="@color/act_background"></stroke>
            <!-- 矩形的圆角半径 -->
            <corners android:radius="3dp" />
        </shape>
    </item>

</selector>