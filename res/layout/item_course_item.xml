<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/ici_course_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textColor="@color/xb_text"
            android:textSize="@dimen/size2" />

        <TextView
            android:id="@+id/ici_audition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:drawableLeft="@drawable/horn"
            android:background="@drawable/audition"
            android:text="@string/ici_audition"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:textSize="@dimen/size2"/>
    </RelativeLayout>

</LinearLayout>