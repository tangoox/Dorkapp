<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/iji_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"/>

        <TextView 
            android:id="@+id/iji_name"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size3"
            android:layout_alignTop="@id/iji_img"
            android:layout_toRightOf="@id/iji_img"
            android:layout_marginLeft="10dp"
            android:textColor="@color/gray_text"
            android:lines="1"
            android:ellipsize="end"/>
        
        <TextView 
            android:id="@+id/iji_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size4"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/iji_img"
            android:textColor="@color/gray_text"
            android:ellipsize="end"
            android:layout_marginLeft="10dp"
            android:lines="1"/>
        
        <View 
            android:id="@+id/iji_pos"
            android:layout_width="0dp"
            android:layout_height="17dp"
            android:layout_alignBottom="@id/iji_img"
            android:layout_toRightOf="@id/iji_img"/>
        
        <TextView
            android:id="@+id/iji_judge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="2"
            android:ellipsize="end"
            android:layout_alignTop="@id/iji_pos"
            android:layout_alignLeft="@id/iji_name"
            android:textSize="@dimen/size3"/>
    </RelativeLayout>

</LinearLayout>
