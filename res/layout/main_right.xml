<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/act_background"
    android:orientation="vertical" >

    <!-- top start -->

    <RelativeLayout
        android:id="@+id/mr_top"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/xb_color" >

        <ImageButton
            android:id="@+id/mr_slidebtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:contentDescription="@null"
            android:padding="10dp"
            android:src="@drawable/mr_slidebtn" />

        <TextView
            android:id="@+id/mr_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawableRight="@drawable/mr_select_address"
            android:padding="5dp"
            android:text="贵阳 "
            android:textColor="@android:color/white"
            android:textSize="@dimen/title" />

        <ImageButton
            android:id="@+id/mr_coord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:contentDescription="@null"
            android:layout_toLeftOf="@+id/mr_search"
            android:background="@drawable/mr_coord" />

        <ImageButton
            android:id="@id/mr_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:contentDescription="@null"
            android:background="@drawable/mr_search" />
    </RelativeLayout>
    <!-- top end -->

	<FrameLayout 
	    android:id="@+id/mr_content"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_below="@id/mr_top"/>
	
	<RelativeLayout
        android:id="@+id/mr_toast"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/mr_top"
        android:background="@android:color/transparent" >
    </RelativeLayout>
    
</RelativeLayout>